# Django
DJANGO_SECRET_KEY=change-me-in-production
DJANGO_DEBUG=1
DJANGO_SETTINGS_MODULE=cutDB.settings.local_settings

# Comma-separated list for ALLOWED_HOSTS (e.g. localhost,127.0.0.1,.example.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (SQLite default; DB_NAME = path to db file if overriding)
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=/path/to/cutdb/db.sqlite3

# ClustalO binary: full path to executable
# Get it from http://www.clustal.org/omega/
CLUSTALO_BIN=/usr/bin/clustalo

# Static files (directory for collectstatic)
# STATIC_ROOT is set in local_settings; default is project_root/staticfiles

